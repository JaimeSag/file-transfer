<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleTextItem">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#818186</item>
    </style>

    <style name="widgetTittle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="widgetSubtitle">
        <item name="android:textColor">#818186</item>
        <item name="fontFamily">@font/ptsans_regular</item>
    </style>

    <style name="ImageWidget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:maxWidth">42dp</item>
        <item name="android:maxHeight">42dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>